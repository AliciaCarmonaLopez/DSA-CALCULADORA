<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/sumaBtn"
        android:layout_width="63dp"
        android:layout_height="49dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:onClick="onClickSumaBtn"
        android:text="+"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textBox" />

    <Button
        android:id="@+id/restaBtn"
        android:layout_width="59dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:onClick="onClickRestaBtn"
        android:text="-"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintStart_toEndOf="@+id/sumaBtn"
        app:layout_constraintTop_toBottomOf="@+id/textBox" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="top"
        app:constraint_referenced_ids="sumaBtn" />

    <Button
        android:id="@+id/multiplicacionBtn"
        android:layout_width="59dp"
        android:layout_height="52dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:onClick='onClickMultiplicacionBtn'
        android:text="x"
        app:layout_constraintStart_toEndOf="@+id/restaBtn"
        app:layout_constraintTop_toBottomOf="@+id/textBox" />

    <Button
        android:id="@+id/divisionBtn"
        android:layout_width="63dp"
        android:layout_height="52dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:onClick="onClickDivisionBtn"
        android:text="/"
        app:layout_constraintStart_toEndOf="@+id/multiplicacionBtn"
        app:layout_constraintTop_toBottomOf="@+id/textBox" />

    <Button
        android:id="@+id/clearBtn"
        android:layout_width="88dp"
        android:layout_height="53dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#E91E63"
        android:onClick="onClickClearBtn"
        android:text="CLEAR"
        app:layout_constraintStart_toEndOf="@+id/divisionBtn"
        app:layout_constraintTop_toBottomOf="@+id/textBox" />

    <Button
        android:id="@+id/num7Btn"
        android:layout_width="83dp"
        android:layout_height="52dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#00BCD4"
        android:onClick="onClick7Btn"
        android:text="7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sumaBtn" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="20dp" />

    <Button
        android:id="@+id/num8Btn"
        android:layout_width="84dp"
        android:layout_height="51dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#00BCD4"
        android:onClick="onClick8Btn"
        android:text="8"
        app:layout_constraintStart_toEndOf="@+id/num7Btn"
        app:layout_constraintTop_toBottomOf="@+id/restaBtn" />

    <Button
        android:id="@+id/num9Btn"
        android:layout_width="82dp"
        android:layout_height="51dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#00BCD4"
        android:onClick="onClick9Btn"
        android:text="9"
        app:layout_constraintStart_toEndOf="@+id/num8Btn"
        app:layout_constraintTop_toBottomOf="@+id/divisionBtn" />

    <Button
        android:id="@+id/sinBtn"
        android:layout_width="88dp"
        android:layout_height="51dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:onClick="onClickSinBtn"
        android:text="sin"
        app:layout_constraintStart_toEndOf="@+id/num9Btn"
        app:layout_constraintTop_toBottomOf="@+id/clearBtn" />

    <Button
        android:id="@+id/num4Btn"
        android:layout_width="83dp"
        android:layout_height="53dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#00BCD4"
        android:onClick="onClick4Btn"
        android:text="4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/num7Btn" />

    <Button
        android:id="@+id/num5Btn"
        android:layout_width="85dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#00BCD4"
        android:onClick="onClick5Btn"
        android:text="5"
        app:layout_constraintStart_toEndOf="@+id/num4Btn"
        app:layout_constraintTop_toBottomOf="@+id/num8Btn" />

    <Button
        android:id="@+id/num6Btn"
        android:layout_width="80dp"
        android:layout_height="51dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#00BCD4"
        android:onClick="onClick6Btn"
        android:text="6"
        app:layout_constraintStart_toEndOf="@+id/num5Btn"
        app:layout_constraintTop_toBottomOf="@+id/num9Btn" />

    <Button
        android:id="@+id/cosBtn"
        android:layout_width="90dp"
        android:layout_height="56dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:onClick="onClickCosBtn"
        android:text="cos"
        app:layout_constraintStart_toEndOf="@+id/num6Btn"
        app:layout_constraintTop_toBottomOf="@+id/sinBtn" />

    <Button
        android:id="@+id/num1Btn"
        android:layout_width="85dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#00BCD4"
        android:onClick="onClick1Btn"
        android:text="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/num4Btn" />

    <Button
        android:id="@+id/num2Btn"
        android:layout_width="85dp"
        android:layout_height="53dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#00BCD4"
        android:onClick="onClick2Btn"
        android:text="2"
        app:layout_constraintStart_toEndOf="@+id/num1Btn"
        app:layout_constraintTop_toBottomOf="@+id/num5Btn" />

    <Button
        android:id="@+id/num3Btn"
        android:layout_width="79dp"
        android:layout_height="52dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#00BCD4"
        android:onClick="onClick3Btn"
        android:text="3"
        app:layout_constraintStart_toEndOf="@+id/num2Btn"
        app:layout_constraintTop_toBottomOf="@+id/num6Btn" />

    <Button
        android:id="@+id/tanBtn"
        android:layout_width="87dp"
        android:layout_height="51dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:onClick="onClickTanBtn"
        android:text="tan"
        app:layout_constraintStart_toEndOf="@+id/num3Btn"
        app:layout_constraintTop_toBottomOf="@+id/cosBtn" />

    <Button
        android:id="@+id/num0Btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:backgroundTint="#00BCD4"
        android:onClick="onClick0Btn"
        android:text="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.065"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/num2Btn" />

    <Button
        android:id="@+id/igualBtn"
        android:layout_width="243dp"
        android:layout_height="55dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#E91E63"
        android:onClick="onClickIgualBtn"
        android:text="="
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintStart_toEndOf="@+id/num0Btn"
        app:layout_constraintTop_toBottomOf="@+id/num3Btn" />

    <TextView
        android:id="@+id/textBox"
        android:layout_width="269dp"
        android:layout_height="54dp"
        android:layout_marginTop="32dp"
        android:background="#6A80FA"
        android:backgroundTint="#B0E2F8"
        android:text="TextView"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>